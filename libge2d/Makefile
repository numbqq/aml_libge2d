export CROSS_COMPILE=aarch64-linux-gnu-
#export CROSS_COMPILE=/opt/gcc-linaro-6.3.1-2017.02-x86_64_aarch64-linux-gnu/bin/aarch64-linux-gnu-
CC = $(CROSS_COMPILE)gcc

CFLAGS += -I./include/
CFLAGS += -I../../aml_libion/include/ion/
LIBDIR := -L../../aml_libion/
SRC  := $(wildcard *.c)
OBJS := $(SRC:%.c=%.o)
.PHONY : clean all

LIB := libge2d.so

all: $(LIB)

%.o: %.c
	$(CC) -c -fPIC -o $@ $< $(CFLAGS)

$(LIB): $(OBJS)
	$(CC) $(CFLAGS) -shared -fPIC $(LIBDIR) -lion -o $(LIB) $(OBJS)
	@rm -f $(OBJS)

clean:
	rm -f $(LIB)
	rm -rf *.o
